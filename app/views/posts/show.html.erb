<div class="layout-container">
  <div class="full-post">
    <div class="post-title">
      <h3>Post by  <%= @post.author.name%> </h3>
      <div>
        Comment: <%= @post.comments_counter %> | Likes: <%= @post.likes_counter %>
      </div>
    </div>

    <div class="post-text">
      <%= @post.text %>
    </div>

  </div>

    <div class="comments">
      <h4>Comments</h4>
      <%= render partial: 'posts/comment', collection: @post.comments, as: :comment %>
    </div>
</div>