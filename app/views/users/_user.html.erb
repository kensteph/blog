<%= link_to user_path(user) do %>
  <div class="user">
    <div class="user-img-wrapper">
      <%= image_tag user&.photo, class: 'user-img' %>
    </div>
    <div class="user-infos">
      <h2 class="user-name"><%= user&.name %></h2>
      <p class="post-counter">Number of posts: <%= user&.posts_counter  %></p>
    </div>
  </div>
<% end %>