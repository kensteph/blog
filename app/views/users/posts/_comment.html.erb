<div id='<%= "comment-#{comment.id}" %>' class="comment">
  <p> <strong> <%= comment.author.name %> </strong> : <%= comment.text %></p>
</div>
<% if can? :destroy, comment %>
  <%= link_to 'Delete Comment', user_post_comment_path(comment.author, comment.post, comment), 'data-turbo-method': :delete, data: { confirm: "Are you sure?"} %>
<% end %>