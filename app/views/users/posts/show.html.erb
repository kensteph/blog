<div class="layout-container">
  <div class="full-post">
    <div class="post-title">
      <h3>Post by  <%= @post.author.name%> </h3>
      <div>
        Comment: <%= @post.comments_counter %> | Likes: <%= @post.likes_counter %>
      </div>
    </div>

    <div class="post-text">
      <%= @post.text %>
    </div>

    <%= form_with url: user_post_likes_path(params[:user_id], @post), method: :post do %>
      <%= submit_tag "Like" %>
    <% end %>
  </div>

    <div class="comments">
      <h4>Comments</h4>
      <%= render partial: 'users/posts/comment', collection: @post.comments, as: :comment %>
    </div>

    <div class="new-btn-wrapper">
      <%= link_to 'New Comment', new_user_post_comment_path(params[:user_id], @post), class: "new-btn" %>
    </div>
</div>
