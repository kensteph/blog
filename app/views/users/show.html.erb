<section class="layout-container">
  <% if !@user.nil? %>
      <%= render partial: 'user', locals: { user: @user } %>

      <div class="user-bio">
        <h3 class="bio-title">Bio</h3>
        <p class="bio-text"><%= @user.bio %></p>
      </div>

      <div class="last_3_post">
        <h3 class="last_3_post-title">Last 3 posts</h3>
        <div class="posts">
          <%= render partial: 'post', collection: @user.last_3_posts %>
        </div>
      </div>

      <div class="all-posts">
        <%= link_to 'See all posts', user_posts_path(user_id: @user.id), class: "all-btn" %>
      </div>
    <% end %>
</section>
